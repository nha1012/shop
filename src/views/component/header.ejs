<header>
  <div
    class="uk-navbar-container tm-navbar-container"
    uk-sticky="cls-active: tm-navbar-container-fixed"
  >
    <div class="uk-container" uk-navbar>
      <div class="uk-navbar-left">
        <button
          class="uk-navbar-toggle uk-hidden@m"
          uk-toggle="target: #nav-offcanvas"
          uk-navbar-toggle-icon
        ></button
        ><a class="uk-navbar-item uk-logo" href="/"
          ><img src="/images/logo.svg" width="90" height="32" alt="Logo"
        /></a>
        <nav class="uk-visible@m">
          <ul class="uk-navbar-nav">
            <li><a href="about">Thông tin</a></li>
            <li><a href="contact">Liên hệ</a></li>
          </ul>
        </nav>
      </div>
      <div class="uk-navbar-right">
        <a
          class="uk-navbar-item uk-link-muted tm-navbar-button"
          href="/cart"
          uk-toggle="target: #cart-offcanvas"
          onclick="return false"
          ><span uk-icon="cart"></span>
          <% if(badge){ %>
          <span class="uk-badge cart-badge__js"><%= badge %></span>
          <% } else{ %>
          <span class="uk-badge cart-badge__js">0</span>
          <% } %>
        </a>
        <a
          class="uk-navbar-item uk-link-muted tm-navbar-button"
          href="/auth"
          uk-icon="user"
        ></a>
      </div>
    </div>
  </div>
</header>
